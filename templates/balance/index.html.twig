{% extends 'balance.html.twig' %}

{% block title %}
    {{ controller_name|trans }}
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <table class="table">
        <thead>
            <tr style="text-transform: uppercase;">
                <th>{{ 'Transaction'|trans }}</th>
                <th>{{ 'Category'|trans }}</th>
                <th>{{ 'Invoice #'|trans }}</th>
                <th>{{ 'Status'|trans }}</th>
                <th>{{ 'Transaction Date'|trans }}</th>
                <th>{{ 'Periodicity'|trans }}</th>
                <th>{{ 'Amount'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.getUuid() }}</td>
                    <td>{{ transaction.getOperationCategory() }}</td>
                    <td>{{ transaction.getRecipientAccountUuid() }}</td>
                    <td>{{ transaction.getOperationStatus() }}</td>
                    <td>{{ transaction.getCreatedAt() }}</td>
                    <td>
                        -
                    </td>
                    <td>
                        <b>{{ transaction.getOperationSum() }}</b>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}